<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="体验性">
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/fluency"
			android:entryValues="@array/fluency_value"
			android:key="fluency"
			android:title="流畅度"
			android:summary="游戏运行畅度"/>
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/special_effects"
			android:entryValues="@array/special_effects_value"
			android:key="special_effects"
			android:title="特效"
			android:summary="游戏特效显示程度"/>
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/frame"
			android:entryValues="@array/frame_value"
			android:key="frame"
			android:title="帧率"
			android:summary="游戏帧率阀值"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="图像">
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/material_level"
			android:entryValues="@array/material_level_value"
			android:key="material_level"
			android:title="材质水平"
			android:summary="游戏图像清晰程度"/>
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/image_quality_style"
			android:entryValues="@array/image_quality_style_value"
			android:key="image_quality_style"
			android:title="画质风格"
			android:summary="游戏图像逼真程度"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="渲染">
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/shadow_resolution"
			android:entryValues="@array/shadow_resolution_value"
			android:key="shadow_resolution"
			android:title="阴影分辨率"
			android:summary="游戏物体阴影清晰程度"/>
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/shadow_visible_distance"
			android:entryValues="@array/shadow_visible_distance_value"
			android:key="shadow_visible_distance"
			android:title="阴影可视距离"
			android:summary="游戏物体阴影可视距离"/>
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/shadow_quality"
			android:entryValues="@array/shadow_quality_value"
			android:key="shadow_quality"
			android:title="阴影质量"
			android:summary="游戏物体阴影细节程度"/>
		<ListPreference
			android:defaultValue="0"
			android:entries="@array/heterosexual_filtration"
			android:entryValues="@array/heterosexual_filtration_value"
			android:key="heterosexual_filtration"
			android:title="各项异性过滤"
			android:summary="过滤、处理当视角变化导致3D物体表面倾斜时造成的纹理错误"/>
	</PreferenceCategory>
</PreferenceScreen>
